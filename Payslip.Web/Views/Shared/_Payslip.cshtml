@model IEnumerable<EmployeePayslip>

@if (Model.Count() > 0)
{

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.PayPeriod)</th>
                <th>@Html.DisplayNameFor(model => model.GrossIncome)</th>
                <th>@Html.DisplayNameFor(model => model.IncomeTax)</th>
                <th>@Html.DisplayNameFor(model => model.NetIncome)</th>
                <th>@Html.DisplayNameFor(model => model.Super)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FullName</td>
                    <td>@employee.PayPeriod</td>
                    <td>@employee.GrossIncome</td>
                    <td>@employee.IncomeTax</td>
                    <td>@employee.NetIncome</td>
                    <td>@employee.Super</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="display-5 text-secondary">Add employees</h3>
}